<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:controls="clr-namespace:book_frontend.Controls"
                    xmlns:h="clr-namespace:book_frontend.Helpers">
  
  <!-- PasswordField 默认模板：带图标 + 浮动提示 + Material 风格 -->
  <Style TargetType="controls:PasswordField">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:PasswordField">
          <StackPanel>
            <materialDesign:PackIcon Kind="{TemplateBinding IconKind}"
                                     Foreground="#2196F3"
                                     Width="24" Height="24"
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,5" />

            <!-- 使用 MaterialDesign 的浮动 Hint 密码框，并通过附加属性实现双向绑定 -->
            <PasswordBox
                materialDesign:HintAssist.Hint="{TemplateBinding HintText}"
                materialDesign:HintAssist.IsFloating="True"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                h:PasswordBoxHelper.BindPassword="True"
                h:PasswordBoxHelper.BoundPassword="{TemplateBinding Password}"
                Margin="0,0,0,20"
                FontSize="16" />
          </StackPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>