<Window x:Class="book_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:book_frontend"
        xmlns:views="clr-namespace:book_frontend.Views.UserControls"
        xmlns:homeviews="clr-namespace:book_frontend.Views"
        mc:Ignorable="d"
        Title="图书管理" Height="720" Width="1200" Background="#F5F5F5">
    <DockPanel>
        <!-- 顶部导航栏占位 -->
        <Border DockPanel.Dock="Top" Background="#673AB7" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="图书管理系统" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,16,0"/>
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <Button Content="首页" Margin="4" Click="HomeButton_Click"/>
                    <Button Content="后台管理" Margin="4"/>
                    <Button Content="登录" Margin="4" Click="LoginButton_Click"/>
                    <Button Content="注册" Margin="4" Click="RegisterButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 主内容区域：动态切换视图 -->
        <Grid Margin="0,10,0,0">
            <!-- 使用ContentControl来动态切换视图 -->
            <ContentControl x:Name="MainContent">
                <homeviews:HomeView/>
            </ContentControl>
        </Grid>
    </DockPanel>
</Window>