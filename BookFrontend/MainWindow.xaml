<Window x:Class="book_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        xmlns:constants="clr-namespace:book_frontend.Constants"
        xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
        Title="{x:Static constants:UiConstant.TrayTooltip}" Height="720" Width="1200" Background="#F5F5F5"
        Closing="Window_Closing"
        WindowState="Maximized">
    <DockPanel>
        <tb:TaskbarIcon x:Name="TaskbarIcon"
                        DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        IconSource="/Assests/Icons/lemon.ico"
                        ToolTipText="{x:Static constants:UiConstant.TrayTooltip}"
                        DoubleClickCommand="{Binding ShowWindowCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static constants:UiConstant.TrayMenuOpen}"
                              Command="{Binding ShowWindowCommand}" />
                    <MenuItem Header="{x:Static constants:UiConstant.TrayMenuExit}"
                              Command="{Binding ExitApplicationCommand}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <!-- 顶部导航栏占位 -->
        <Border DockPanel.Dock="Top" Background="#673AB7" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static constants:UiConstant.TrayTooltip}" Foreground="White" FontSize="18"
                           FontWeight="Bold" />
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0"
                            d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
                    <Button x:Name="MainPage" Content="首页" Click="HomeButton_Click" Style="{StaticResource PrimaryButtonStyle}" />
                    <Button x:Name="AdminButton" Content="后台管理" Click="AdminButton_Click" Style="{StaticResource PrimaryButtonStyle}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Button x:Name="LoginButton" Content="登录" Margin="4" Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLoggedIn}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="RegisterButton" Content="注册" Margin="4" Click="RegisterButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLoggedIn}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="LogoutButton" Content="退出" Margin="4" Click="LogoutButton_Click" Style="{StaticResource PrimaryButtonStyle}"
                            Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 主内容区域：动态切换视图 -->
        <Grid Margin="0,10,0,0">
            <!-- 使用Frame来导航Page -->
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" />
        </Grid>
    </DockPanel>
</Window>