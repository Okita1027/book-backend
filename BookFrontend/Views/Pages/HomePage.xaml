<Page x:Class="book_frontend.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:book_frontend.Views"
  
      xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
      mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:BookListViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <!--
                Auto：根据内容自动调整高度
                *：平均分配空间
            -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 搜索表单 -->
        <Border Style="{StaticResource SearchFormContainerStyle}" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Orientation：排列方向 -->
                <StackPanel Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="图书名称" Style="{StaticResource FormLabelStyle}" />
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" Style="{StaticResource FormTextBoxStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="作者" Style="{StaticResource FormLabelStyle}" />
                    <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" Style="{StaticResource FormTextBoxStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="类别名称" Style="{StaticResource FormLabelStyle}" />
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" Style="{StaticResource FormTextBoxStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="出版社名称" Style="{StaticResource FormLabelStyle}" />
                    <TextBox Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" Style="{StaticResource FormTextBoxStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="ISBN" Style="{StaticResource FormLabelStyle}" />
                    <TextBox Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" Style="{StaticResource FormTextBoxStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="出版日期开始" Style="{StaticResource FormLabelStyle}" />
                    <DatePicker SelectedDate="{Binding PublishDateStart}" Style="{StaticResource FormDatePickerStyle}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource FormFieldContainerStyle}">
                    <TextBlock Text="出版日期结束" Style="{StaticResource FormLabelStyle}" />
                    <DatePicker SelectedDate="{Binding PublishDateEnd}" Style="{StaticResource FormDatePickerStyle}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Grid.Column="0" Style="{StaticResource FormButtonGroupStyle}">
                    <Button Content="重置" Command="{Binding ResetCommand}" Style="{StaticResource FormResetButtonStyle}" />
                    <Button Content="搜索" Command="{Binding SearchCommand}" Style="{StaticResource FormSearchButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 结果列表 -->
        <Border Grid.Row="1" Style="{StaticResource DataTableContainerStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" Style="{StaticResource TableHeaderContainerStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1.5*" />
                            <!-- 预留滚动条宽度 -->
                            <ColumnDefinition Width="17" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="图书名称" Style="{StaticResource TableHeaderTextStyle}" />
                        </Border>
                        <Border Grid.Column="1" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="作者" Style="{StaticResource TableHeaderTextStyle}" />
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="出版社" Style="{StaticResource TableHeaderTextStyle}" />
                        </Border>
                        <Border Grid.Column="3" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="ISBN" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="4" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="出版日期" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="5" Style="{StaticResource TableHeaderCellStyle}">
                            <TextBlock Text="库存/可借" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="6" Style="{StaticResource TableHeaderCellStyle}" BorderThickness="0">
                            <TextBlock Text="类别" Style="{StaticResource TableHeaderTextStyle}" />
                        </Border>
                    </Grid>
                </Border>

                <!-- 滚动条 -->
                <ScrollViewer x:Name="BookListScrollViewer" Grid.Row="1" Style="{StaticResource TableScrollViewerStyle}"
                              ScrollChanged="BookListScrollViewer_ScrollChanged">
                    <!-- 条目控件：根据一个数据集合来重复创建 UI 元素 -->
                    <ItemsControl ItemsSource="{Binding Books}" Style="{StaticResource TableItemsControlStyle}">
                        <!-- 声明数据模板 -->
                        <ItemsControl.ItemTemplate>
                            <!-- 详细设定模板中每条数据是如何渲染的 -->
                            <DataTemplate>
                                <Border Style="{StaticResource TableRowContainerStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1.5*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource TableDataTitleTextStyle}" />
                                        </Border>
                                        <Border Grid.Column="1" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Text="{Binding AuthorName}" Style="{StaticResource TableDataTextStyle}" />
                                        </Border>
                                        <Border Grid.Column="2" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Text="{Binding PublisherName}" Style="{StaticResource TableDataTextStyle}" />
                                        </Border>
                                        <Border Grid.Column="3" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Text="{Binding Isbn}" Style="{StaticResource TableDataCenterTextStyle}" />
                                        </Border>
                                        <Border Grid.Column="4" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Text="{Binding PublishedDate, StringFormat=yyyy-MM-dd}" Style="{StaticResource TableDataCenterTextStyle}" />
                                        </Border>
                                        <Border Grid.Column="5" Style="{StaticResource TableDataCellStyle}">
                                            <TextBlock Style="{StaticResource TableDataCenterTextStyle}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}/{1}">
                                                        <Binding Path="Stock" />
                                                        <Binding Path="Available" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                        <Border Grid.Column="6" Style="{StaticResource TableDataCellStyle}" BorderThickness="0">
                                            <TextBlock Style="{StaticResource TableDataTextStyle}">
                                                <TextBlock.Text>
                                                    <Binding Path="CategoryNames"
                                                             Converter="{StaticResource StringArrayToStringConverter}" />
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>



                <!-- 错误文本 -->
                <TextBlock Grid.Row="0" Foreground="Red" Text="{Binding ErrorMessage}" HorizontalAlignment="Center"
                           VerticalAlignment="Top" />
            </Grid>
        </Border>

        <!-- 分页（已注释，改为滚动分页）
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="上一页" Margin="4" Command="{Binding PrevPageCommand}" />
            <Grid Margin="0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding PageIndex}" HorizontalAlignment="Center" />
                <TextBlock Text="当前页码" Grid.Row="1" HorizontalAlignment="Center" FontSize="12" Foreground="Gray" />
            </Grid>
            <Button Content="下一页" Margin="4" Command="{Binding NextPageCommand}" />

            输入页码跳转（已停用）
            <TextBlock Text=" 跳转到" Margin="10,0,0,0" VerticalAlignment="Center" />
            <TextBox Width="60" Text="{Binding JumpToPageInput, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="/" VerticalAlignment="Center" Margin="4,0" />
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" />
            <Button Content="跳转" Margin="8,0,0,0" Command="{Binding JumpToPageCommand}" />

            <TextBlock Text="/ 共" Margin="6,0,0,0" />
            <TextBlock Text="{Binding Total}" />
            <TextBlock Text="条" />
        </StackPanel>
        -->
    </Grid>
</Page>