<Page x:Class="book_frontend.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
      xmlns:constants="clr-namespace:book_frontend.Constants"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:BookListViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <!--
                Auto：根据内容自动调整高度
                *：平均分配空间
            -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 搜索表单 -->
        <Border Style="{StaticResource SearchAreaContainerStyle}" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 第一行搜索条件 (4个字段) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="图书名称" Style="{StaticResource SearchLabelStyle}" />
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="请输入图书名称"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="作者" Style="{StaticResource SearchLabelStyle}" />
                    <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="请输入作者姓名"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="类别名称" Style="{StaticResource SearchLabelStyle}" />
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="请输入类别名称"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,10,0">
                    <TextBlock Text="出版社名称" Style="{StaticResource SearchLabelStyle}" />
                    <TextBox Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="请输入出版社名称"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <!-- 搜索按钮 -->
                <StackPanel Grid.Row="0" Grid.Column="4" VerticalAlignment="Bottom">
                    <Button Command="{Binding SearchCommand}"
                            Style="{StaticResource SearchButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16"
                                                     VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBlock Text="搜索" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 第二行搜索条件 (3个字段) -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,10,0">
                    <TextBlock Text="ISBN" Style="{StaticResource SearchLabelStyle}" />
                    <TextBox Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="请输入ISBN"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,15,10,0">
                    <TextBlock Text="出版日期开始" Style="{StaticResource SearchLabelStyle}" />
                    <DatePicker SelectedDate="{Binding PublishDateStart, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="请选择开始日期"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,10,0">
                    <TextBlock Text="出版日期结束" Style="{StaticResource SearchLabelStyle}" />
                    <DatePicker SelectedDate="{Binding PublishDateEnd, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="请选择结束日期"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                </StackPanel>

                <!-- 重置按钮 -->
                <StackPanel Grid.Row="1" Grid.Column="4" VerticalAlignment="Bottom">
                    <Button Command="{Binding ResetCommand}"
                            Style="{StaticResource ResetButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"
                                                     VerticalAlignment="Center" Margin="0,0,5,0" />
                            <TextBlock Text="重置" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 结果列表 -->
        <Border Grid.Row="1" Style="{StaticResource DataTableContainerStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 滚动条 -->
                <ScrollViewer x:Name="BookListScrollViewer" Grid.Row="0"
                              Style="{StaticResource TableScrollViewerStyle}"
                              ScrollChanged="BookListScrollViewer_ScrollChanged">
                    <StackPanel>
                        <!-- 标题栏 -->
                        <Border Style="{StaticResource TableHeaderContainerStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="图书名称" Style="{StaticResource TableHeaderTextStyle}" />
                                </Border>
                                <Border Grid.Column="1" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="作者" Style="{StaticResource TableHeaderTextStyle}" />
                                </Border>
                                <Border Grid.Column="2" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="出版社" Style="{StaticResource TableHeaderTextStyle}" />
                                </Border>
                                <Border Grid.Column="3" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="ISBN" Style="{StaticResource TableHeaderTextStyle}"
                                               HorizontalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="4" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="出版日期" Style="{StaticResource TableHeaderTextStyle}"
                                               HorizontalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="5" Style="{StaticResource TableHeaderCellStyle}">
                                    <TextBlock Text="库存/可借" Style="{StaticResource TableHeaderTextStyle}"
                                               HorizontalAlignment="Center" />
                                </Border>
                                <Border Grid.Column="6" Style="{StaticResource TableHeaderCellStyle}"
                                        BorderThickness="0">
                                    <TextBlock Text="类别" Style="{StaticResource TableHeaderTextStyle}" />
                                </Border>
                            </Grid>
                        </Border>

                        <!-- 条目控件：根据一个数据集合来重复创建 UI 元素 -->
                        <ItemsControl ItemsSource="{Binding Books}" Style="{StaticResource TableItemsControlStyle}">
                            <!-- 声明数据模板 -->
                            <ItemsControl.ItemTemplate>
                                <!-- 详细设定模板中每条数据是如何渲染的 -->
                                <DataTemplate>
                                    <Border Style="{StaticResource TableRowContainerStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1.5*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Text="{Binding Title}"
                                                           Style="{StaticResource TableDataTitleTextStyle}" />
                                            </Border>
                                            <Border Grid.Column="1" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Text="{Binding AuthorName}"
                                                           Style="{StaticResource TableDataTextStyle}" />
                                            </Border>
                                            <Border Grid.Column="2" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Text="{Binding PublisherName}"
                                                           Style="{StaticResource TableDataTextStyle}" />
                                            </Border>
                                            <Border Grid.Column="3" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Text="{Binding Isbn}"
                                                           Style="{StaticResource TableDataCenterTextStyle}" />
                                            </Border>
                                            <Border Grid.Column="4" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Text="{Binding PublishedDate, StringFormat=yyyy-MM-dd}"
                                                           Style="{StaticResource TableDataCenterTextStyle}" />
                                            </Border>
                                            <Border Grid.Column="5" Style="{StaticResource TableDataCellStyle}">
                                                <TextBlock Style="{StaticResource TableDataCenterTextStyle}">
                                                    <TextBlock.Text>
                                                        <!-- 多重绑定 -->
                                                        <MultiBinding StringFormat="{}{0}/{1}">
                                                            <Binding Path="Stock" />
                                                            <Binding Path="Available" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>
                                            <Border Grid.Column="6" Style="{StaticResource TableDataCellStyle}"
                                                    BorderThickness="0">
                                                <TextBlock Style="{StaticResource TableDataTextStyle}">
                                                    <TextBlock.Text>
                                                        <Binding Path="CategoryNames"
                                                                 Converter="{StaticResource StringArrayToStringConverter}" />
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- 错误文本 -->
                <TextBlock Grid.Row="0" Foreground="Red" Text="{Binding ErrorMessage}" HorizontalAlignment="Center"
                           VerticalAlignment="Top" Margin="0,10,0,0" />
            </Grid>
        </Border>

        <!-- 分页（已注释，改为滚动分页）
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="上一页" Margin="4" Command="{Binding PrevPageCommand}" />
            <Grid Margin="0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding PageIndex}" HorizontalAlignment="Center" />
                <TextBlock Text="{x:Static constants:UiConstant.CurrentPage}" Grid.Row="1" HorizontalAlignment="Center" FontSize="12" Foreground="Gray" />
            </Grid>
            <Button Content="下一页" Margin="4" Command="{Binding NextPageCommand}" />

            输入页码跳转（已停用）
            <TextBlock Text="{x:Static constants:UiConstant.JumpTo}" Margin="10,0,0,0" VerticalAlignment="Center" />
            <TextBox Width="60" Text="{Binding JumpToPageInput, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="/" VerticalAlignment="Center" Margin="4,0" />
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" />
            <Button Content="跳转" Margin="8,0,0,0" Command="{Binding JumpToPageCommand}" />

            <TextBlock Text="/ 共" Margin="6,0,0,0" />
            <TextBlock Text="{Binding Total}" />
            <TextBlock Text="条" />
        </StackPanel>
        -->
    </Grid>
</Page>