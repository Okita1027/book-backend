<Page x:Class="book_frontend.Views.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      d:DataContext="{d:DesignInstance Type=viewModels:AdminViewModel, IsDesignTimeCreatable=False}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ResourceDictionaries/AdminPageStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Style="{StaticResource AdminPageContainerStyle}">
        <Grid.ColumnDefinitions>
            <!-- 左侧导航栏 -->
            <ColumnDefinition Width="250" />
            <!-- 右侧内容区域 -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧导航菜单 -->
        <Border Grid.Column="0" Style="{StaticResource AdminSidebarContainerStyle}">
            <StackPanel Margin="0,20,0,0">
                <!-- 管理员信息 -->
                <Border Style="{StaticResource AdminInfoAreaStyle}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Account" Style="{StaticResource AdminAvatarStyle}" />
                        <TextBlock Text="{Binding CurrentUserName}" Style="{StaticResource AdminNameStyle}" />
                        <TextBlock Text="管理员" Style="{StaticResource AdminRoleStyle}" />
                    </StackPanel>
                </Border>

                <!-- 导航菜单 -->
                <TextBlock Text="管理功能" 
                           Margin="15,20,15,10" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Foreground="#333" />

                <!-- 图书管理按钮 -->
                <Button Name="BookManagementButton" 
                        Click="BookManagementButton_Click"
                        Style="{StaticResource BookManagementButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Book" Width="20" Height="20" 
                                                 VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBlock Text="图书管理" VerticalAlignment="Center" FontSize="14" />
                    </StackPanel>
                </Button>

                <!-- 用户管理按钮 -->
                <Button Name="UserManagementButton" 
                        Click="UserManagementButton_Click"
                        Style="{StaticResource UserManagementButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" 
                                                 VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBlock Text="用户管理" VerticalAlignment="Center" FontSize="14" />
                    </StackPanel>
                </Button>


            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <Border Grid.Column="1" Style="{StaticResource AdminContentAreaStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <!-- 面包屑导航 -->
                <RowDefinition Height="Auto" />
                <!-- 主内容区域 -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 面包屑导航 -->
            <Border Grid.Row="0" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="20,15">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Home" Width="16" Height="16" VerticalAlignment="Center" Foreground="#666" />
                    <TextBlock Text="后台管理" Margin="5,0" VerticalAlignment="Center" Foreground="#666" />
                    <materialDesign:PackIcon Kind="ChevronRight" Width="12" Height="12" VerticalAlignment="Center" Foreground="#999" />
                    <TextBlock Text="{Binding CurrentPageTitle}" Margin="5,0" VerticalAlignment="Center" FontWeight="Bold" />
                </StackPanel>
            </Border>

            <!-- 主内容区域 -->
            <Frame Grid.Row="1" Name="AdminContentFrame" NavigationUIVisibility="Hidden" />
        </Grid>
        </Border>
    </Grid>
</Page>