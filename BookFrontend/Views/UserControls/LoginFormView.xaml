<UserControl x:Class="book_frontend.Views.UserControls.LoginFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
             xmlns:controls="clr-namespace:book_frontend.Views.UserControls"
             xmlns:constants="clr-namespace:book_frontend.Constants"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:LoginViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="{x:Static constants:UiConstant.UserLogin}"
                   Style="{StaticResource PageTitleStyle}" />

        <!-- 登录表单主体 -->
        <ScrollViewer Grid.Row="1" Style="{StaticResource ContentAreaStyle}">
            <StackPanel VerticalAlignment="Top">
                <!-- 邮箱输入 -->
                <controls:TextInputField IconKind="Email"
                                         HintText="{x:Static constants:UiConstant.EmailPlaceholder}"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 密码输入 -->
                <controls:PasswordInputField IconKind="Lock"
                                             HintText="{x:Static constants:UiConstant.PasswordPlaceholder}"
                                             Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,0,10" />

                <!-- 记住我选项 -->
                <CheckBox Content="记住我"
                          IsChecked="{Binding RememberMe, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource RememberMeCheckBoxStyle}" />

                <!-- 消息显示 -->
                <controls:MessageDisplay ErrorMessage="{Binding ErrorMessage}"
                                         SuccessMessage="{Binding SuccessMessage}" />

                <Button Content="{x:Static constants:UiConstant.LoginButton}"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource AuthButtonStyle}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </ScrollViewer>

        <!-- 底部内容容器（交由宿主页面决定点击行为） -->
        <ContentPresenter Grid.Row="2"
                          Content="{Binding FooterContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>