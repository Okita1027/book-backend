<UserControl x:Class="book_frontend.Views.UserControls.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:book_frontend.Views"
             xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance viewModels:BookListViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <!--
                Auto：根据内容自动调整高度
                *：平均分配空间
            -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 搜索表单 -->
        <Border Padding="16" Background="White" BorderBrush="Beige" 
                CornerRadius="6" Margin="10" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Orientation：排列方向 -->
                <StackPanel Margin="6" Orientation="Vertical">
                    <TextBlock Text="图书名称" />
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="6" Orientation="Vertical">
                    <TextBlock Text="作者" />
                    <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="6" Orientation="Vertical">
                    <TextBlock Text="类别名称" />
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版社名称" />
                    <TextBox Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="6" Orientation="Vertical">
                    <TextBlock Text="ISBN" />
                    <TextBox Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}" KeyDown="TextBox_KeyDown" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版日期开始" />
                    <DatePicker SelectedDate="{Binding PublishDateStart}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版日期结束" />
                    <DatePicker SelectedDate="{Binding PublishDateEnd}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Grid.Column="0" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="6">
                    <Button Content="重置" Margin="0,0,8,0" Command="{Binding ResetCommand}" />
                    <Button Content="搜索" Command="{Binding SearchCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 结果列表 -->
        <Border Grid.Row="1" Margin="10" Background="White" CornerRadius="6" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Border Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" Background="#F8F9FA">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1.5*" />
                            <!-- 预留滚动条宽度 -->
                            <ColumnDefinition Width="17" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="图书名称" FontWeight="Bold" />
                        </Border>
                        <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="作者" FontWeight="Bold" />
                        </Border>
                        <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="出版社" FontWeight="Bold" />
                        </Border>
                        <Border Grid.Column="3" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="ISBN" FontWeight="Bold" />
                        </Border>
                        <Border Grid.Column="4" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="出版日期" FontWeight="Bold" />
                        </Border>
                        <Border Grid.Column="5" BorderBrush="#DDD" BorderThickness="0 0 1 0" Padding="8">
                            <TextBlock Text="库存/可借" FontWeight="Bold" HorizontalAlignment="Center" />
                        </Border>
                        <Border Grid.Column="6" BorderBrush="#DDD" BorderThickness="0 0 0 0" Padding="8">
                            <TextBlock Text="类别" FontWeight="Bold" />
                        </Border>
                    </Grid>
                </Border>

                <!-- 滚动条 -->
                <ScrollViewer x:Name="BookListScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible"
                              ScrollChanged="BookListScrollViewer_ScrollChanged">
                    <!-- 条目控件：根据一个数据集合来重复创建 UI 元素 -->
                    <ItemsControl ItemsSource="{Binding Books}">
                        <!-- 声明数据模板 -->
                        <ItemsControl.ItemTemplate>
                            <!-- 详细设定模板中每条数据是如何渲染的 -->
                            <DataTemplate>
                                <Border BorderBrush="#EEE" BorderThickness="1 0 1 1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1.5*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        </Border>
                                        <Border Grid.Column="1" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock Text="{Binding AuthorName}" TextWrapping="Wrap" />
                                        </Border>
                                        <Border Grid.Column="2" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock Text="{Binding PublisherName}" TextWrapping="Wrap" />
                                        </Border>
                                        <Border Grid.Column="3" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock Text="{Binding Isbn}" TextWrapping="Wrap" />
                                        </Border>
                                        <Border Grid.Column="4" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock Text="{Binding PublishedDate, StringFormat=yyyy-MM-dd}" />
                                        </Border>
                                        <Border Grid.Column="5" BorderBrush="#EEE" BorderThickness="0 0 1 0"
                                                Padding="8">
                                            <TextBlock HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}/{1}">
                                                        <Binding Path="Stock" />
                                                        <Binding Path="Available" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                        <Border Grid.Column="6" BorderBrush="#EEE" BorderThickness="0 0 0 0"
                                                Padding="8">
                                            <TextBlock TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    <Binding Path="CategoryNames"
                                                             Converter="{StaticResource StringArrayToStringConverter}" />
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- 
                    Visibility属性是一个枚举类型，包含三个值：
                        Visible (0) - 元素可见
                        Hidden (1) - 元素不可见，但仍占用空间
                        Collapsed (2) - 元素不可见，且不占用空间
                 -->
                <Grid Grid.Row="0"
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Background="#80FFFFFF">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- 不确定进度的进度条（循环动画） -->
                        <ProgressBar IsIndeterminate="True" Width="200" />
                        <TextBlock Text="正在查询..." HorizontalAlignment="Center" Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
                <TextBlock Grid.Row="0" Foreground="Red" Text="{Binding ErrorMessage}" HorizontalAlignment="Center"
                           VerticalAlignment="Top" />
            </Grid>
        </Border>

        <!-- 分页（已注释，改为滚动分页）
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="上一页" Margin="4" Command="{Binding PrevPageCommand}" />
            <Grid Margin="0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding PageIndex}" HorizontalAlignment="Center" />
                <TextBlock Text="当前页码" Grid.Row="1" HorizontalAlignment="Center" FontSize="12" Foreground="Gray" />
            </Grid>
            <Button Content="下一页" Margin="4" Command="{Binding NextPageCommand}" />

            输入页码跳转（已停用）
            <TextBlock Text=" 跳转到" Margin="10,0,0,0" VerticalAlignment="Center" />
            <TextBox Width="60" Text="{Binding JumpToPageInput, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="/" VerticalAlignment="Center" Margin="4,0" />
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" />
            <Button Content="跳转" Margin="8,0,0,0" Command="{Binding JumpToPageCommand}" />

            <TextBlock Text="/ 共" Margin="6,0,0,0" />
            <TextBlock Text="{Binding Total}" />
            <TextBlock Text="条" />
        </StackPanel>
        -->
    </Grid>
</UserControl>