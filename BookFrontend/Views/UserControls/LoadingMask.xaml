<UserControl x:Class="book_frontend.Views.UserControls.LoadingMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:constants="clr-namespace:book_frontend.Constants"
             x:Name="LoadingMaskControl"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!--
        遮罩层
        ElementName绑定: ElementName=LoadingMaskControl 指定绑定源为此控件本身
        FallbackValue: 当绑定失败时使用的默认值
        Visibility属性是一个枚举类型，包含三个值：
            Visible (0) -> 元素可见
            Hidden (1) -> 元素不可见，但仍占用空间
            Collapsed (2) -> 元素不可见，且不占用空间
     -->
    <Grid Style="{StaticResource LoadingMaskStyle}"
          Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=LoadingMaskControl}">
        <!-- 添加边框样式 -->
        <Border Style="{StaticResource LoadingContainerStyle}">
            <StackPanel Style="{StaticResource LoadingContentStyle}">
                <!-- 
                    进度条：IsIndeterminate="True"表示不确定进度的循环动画 
                    ElementName=LoadingMaskControl: 指定绑定源为LoadingMaskControl控件本身
                -->
                <ProgressBar IsIndeterminate="True"
                             Width="{Binding ProgressBarWidth, ElementName=LoadingMaskControl, FallbackValue=150}"
                             Height="{Binding ProgressBarHeight, ElementName=LoadingMaskControl, FallbackValue=6}"
                             Foreground="{Binding ProgressBarForeground, ElementName=LoadingMaskControl, FallbackValue=#2196F3}" />
                <!-- 加载文本 -->
                <TextBlock Text="{Binding LoadingText, ElementName=LoadingMaskControl, FallbackValue={x:Static constants:UiConstant.Loading}}"
                           Style="{StaticResource LoadingTextStyle}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>