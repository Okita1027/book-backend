<UserControl x:Class="book_frontend.Views.UserControls.RegisterFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:book_frontend.ViewModels"
             xmlns:controls="clr-namespace:book_frontend.Views.UserControls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:RegisterViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="用户注册" Style="{StaticResource PageTitleStyle}" />

        <!-- 注册表单主体 -->
        <ScrollViewer Grid.Row="1" Style="{StaticResource ContentAreaStyle}">
            <StackPanel VerticalAlignment="Top">
                <!-- 姓名输入 -->
                <controls:TextInputField IconKind="Account"
                                       HintText="请输入姓名"
                                       Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 邮箱输入 -->
                <controls:TextInputField IconKind="Email"
                                       HintText="请输入邮箱地址"
                                       Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 密码输入 -->
                <controls:PasswordInputField IconKind="Lock"
                                           HintText="请输入密码"
                                           Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 确认密码输入 -->
                <controls:PasswordInputField IconKind="LockCheck"
                                           HintText="请确认密码"
                                           Password="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="0,0,0,10" />

                <!-- 消息显示 -->
                <controls:MessageDisplay ErrorMessage="{Binding ErrorMessage}"
                                        SuccessMessage="{Binding SuccessMessage}" />

                <Button Content="注册"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="16"
                        Height="45"
                        Margin="0,10,0,0"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>
        </ScrollViewer>

        <!-- 底部内容容器（交由宿主页面决定点击行为） -->
        <ContentPresenter Grid.Row="2" Content="{Binding FooterContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>