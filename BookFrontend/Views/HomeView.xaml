<UserControl x:Class="book_frontend.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:book_frontend.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 搜索表单 -->
        <Border Padding="16" Background="White" CornerRadius="6" Margin="10" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="6" Orientation="Vertical">
                    <TextBlock Text="图书名称"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="6" Orientation="Vertical">
                    <TextBlock Text="作者"/>
                    <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="6" Orientation="Vertical">
                    <TextBlock Text="类别名称"/>
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="3" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版社名称"/>
                    <TextBox Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="6" Orientation="Vertical">
                    <TextBlock Text="ISBN"/>
                    <TextBox Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版日期开始"/>
                    <DatePicker SelectedDate="{Binding PublishDateStart}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="6" Orientation="Vertical">
                    <TextBlock Text="出版日期结束"/>
                    <DatePicker SelectedDate="{Binding PublishDateEnd}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="6">
                    <Button Content="重置" Margin="0,0,8,0" Command="{Binding ResetCommand}"/>
                    <Button Content="搜索" Command="{Binding SearchCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 结果列表 -->
        <Border Grid.Row="1" Margin="10" Background="White" CornerRadius="6" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Books}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEE" BorderThickness="0 0 0 1" Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding AuthorName}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding PublisherName}"/>
                                        <StackPanel Grid.Column="3" Orientation="Vertical">
                                            <TextBlock Text="{Binding Isbn}"/>
                                            <TextBlock Text="{Binding PublishedDate, StringFormat=yyyy-MM-dd}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#80FFFFFF">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200"/>
                        <TextBlock Text="正在查询..." HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
                <TextBlock Foreground="Red" Text="{Binding ErrorMessage}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- 分页 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="上一页" Margin="4" Command="{Binding PrevPageCommand}"/>
            <TextBlock Text="{Binding PageIndex}" Margin="10,0"/>
            <Button Content="下一页" Margin="4" Command="{Binding NextPageCommand}"/>
            <TextBlock Text="/ 共" Margin="6,0,0,0"/>
            <TextBlock Text="{Binding Total}"/>
            <TextBlock Text="条"/>
        </StackPanel>
    </Grid>
</UserControl>