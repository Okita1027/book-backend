<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- LoginFormView 和 RegisterFormView 样式 -->
    
    <!-- 登录/注册按钮样式 -->
    <Style x:Key="AuthButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#2196F3" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <!-- 记住我复选框样式 -->
    <Style x:Key="RememberMeCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Visibility" Value="Hidden" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="#666" />
    </Style>

    <!-- TextInputField 样式 -->
    
    <!-- 输入字段图标样式 -->
    <Style x:Key="InputFieldIconStyle" TargetType="materialDesign:PackIcon">
        <Setter Property="Foreground" Value="#2196F3" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <!-- 文本输入框样式 -->
    <Style x:Key="CustomTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- PasswordInputField 样式 -->
    
    <!-- 密码输入框样式 -->
    <Style x:Key="CustomPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="FontSize" Value="16" />
    </Style>

</ResourceDictionary>