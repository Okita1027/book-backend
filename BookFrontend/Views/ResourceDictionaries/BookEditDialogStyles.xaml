<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- 图书编辑对话框主容器样式 -->
    <Style x:Key="BookEditDialogContainerStyle" TargetType="Grid">
        <Setter Property="Margin" Value="20" />
    </Style>

    <!-- 加载遮罩容器样式 -->
    <Style x:Key="LoadingMaskContainerStyle" TargetType="Grid">
        <Setter Property="Background" Value="#80FFFFFF" />
        <Setter Property="Panel.ZIndex" Value="999" />
    </Style>

    <!-- 加载指示器样式 -->
    <Style x:Key="LoadingIndicatorStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- 加载进度条样式 -->
    <Style x:Key="LoadingProgressBarStyle" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
        <Setter Property="Value" Value="0" />
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
    </Style>

    <!-- 加载文本样式 -->
    <Style x:Key="LoadingTextStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- 表单滚动视图样式 -->
    <Style x:Key="FormScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <!-- 表单字段容器样式 -->
    <Style x:Key="FormFieldContainerStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- 表单输入框样式 -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- 表单日期选择器样式 -->
    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- 表单下拉框样式 -->
    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- 数量输入网格样式 -->
    <Style x:Key="QuantityInputGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- 分类选择组框样式 -->
    <Style x:Key="CategorySelectionGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignCardGroupBox}">
        <Setter Property="Margin" Value="0,8,0,16" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <!-- 分类选择滚动视图样式 -->
    <Style x:Key="CategorySelectionScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="MaxHeight" Value="150" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <!-- 分类复选框样式 -->
    <Style x:Key="CategoryCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- 验证错误容器样式 -->
    <Style x:Key="ValidationErrorContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#F44336" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Height" Value="0" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding HasValidationErrors}" Value="True">
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Margin" Value="0,8,0,8" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- 验证错误文本样式 -->
    <Style x:Key="ValidationErrorTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- 按钮区域容器样式 -->
    <Style x:Key="ButtonAreaContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="Padding" Value="20,15" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
    </Style>

    <!-- 取消按钮样式 -->
    <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Margin" Value="0,0,12,0" />
    </Style>

    <!-- 保存按钮样式 -->
    <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="36" />
    </Style>

    <!-- 保存中进度条样式 -->
    <Style x:Key="SavingProgressBarStyle" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
        <Setter Property="Value" Value="0" />
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>

    <!-- 保存中文本样式 -->
    <Style x:Key="SavingTextStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>