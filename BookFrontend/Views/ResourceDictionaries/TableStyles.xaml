<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 数据表格容器样式 -->
    <Style x:Key="DataTableContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- 表格标题栏样式 -->
    <Style x:Key="TableHeaderContainerStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#DDD" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#F8F9FA" />
    </Style>

    <!-- 表格标题单元格样式 -->
    <Style x:Key="TableHeaderCellStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#DDD" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- 表格标题文本样式 -->
    <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#333" />
    </Style>

    <!-- 表格数据行容器样式 -->
    <Style x:Key="TableRowContainerStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#EEE" />
        <Setter Property="BorderThickness" Value="1,0,1,1" />
        <Setter Property="Background" Value="White" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F5F5F5" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 表格数据单元格样式 -->
    <Style x:Key="TableDataCellStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#EEE" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- 表格数据文本样式 -->
    <Style x:Key="TableDataTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="#555" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- 表格标题文本样式（加粗） -->
    <Style x:Key="TableDataTitleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TableDataTextStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#333" />
    </Style>

    <!-- 表格居中文本样式 -->
    <Style x:Key="TableDataCenterTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TableDataTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- 表格滚动视图样式 -->
    <Style x:Key="TableScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Visible" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- 表格项目控件样式 -->
    <Style x:Key="TableItemsControlStyle" TargetType="ItemsControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>