<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- 图书管理主容器样式 -->
    <Style x:Key="BookManagementContainerStyle" TargetType="Grid">
        <Setter Property="Background" Value="#f5f5f5" />
        <Setter Property="Margin" Value="20" />
    </Style>

    <!-- 图书管理标题区域样式 -->
    <Style x:Key="BookManagementHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#e0e0e0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <!-- 图书管理标题文本样式 -->
    <Style x:Key="BookManagementTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#333" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- 刷新按钮样式 -->
    <Style x:Key="RefreshButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Background" Value="#4CAF50" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <!-- 搜索区域容器样式 -->
    <Style x:Key="SearchAreaContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#e0e0e0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <!-- 搜索标签样式 -->
    <Style x:Key="SearchLabelStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- 搜索按钮样式 -->
    <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#2196F3" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <!-- 重置按钮样式 -->
    <Style x:Key="ResetButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <!-- 操作按钮区域样式 -->
    <Style x:Key="ActionButtonAreaStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#e0e0e0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <!-- 新增按钮样式 -->
    <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#4CAF50" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <!-- 编辑按钮样式 -->
    <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#FF9800" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="15,8" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <!-- 删除按钮样式 -->
    <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#F44336" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="15,8" />
    </Style>

    <!-- 数据表格容器样式 -->
    <Style x:Key="DataGridContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#e0e0e0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <!-- 数据表格样式 -->
    <Style x:Key="BookDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
        <Setter Property="AlternatingRowBackground" Value="#f9f9f9" />
        <Setter Property="RowBackground" Value="White" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="CanUserDeleteRows" Value="False" />
        <Setter Property="SelectionMode" Value="Extended" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="#e0e0e0" />
    </Style>

    <!-- 分页区域容器样式 -->
    <Style x:Key="PaginationContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#e0e0e0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="15" />
    </Style>

    <!-- 分页信息文本样式 -->
    <Style x:Key="PaginationInfoStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#2196F3" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

</ResourceDictionary>